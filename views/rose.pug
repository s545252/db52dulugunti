extends layout

block content
  h1= title
  - let createView = `dispatch(\"rose/create\")`

  button.btn(class="btn-primary m1-2", onclick=createView) Create
  - var results = results
  div(class="container-fuild")
    div(class="row m-1")
      each result,index in results
        - let destination = `dispatch(\"/rose/update?id=${result._id}\")`
        div(class="col-sm-4")  #{result.types} - #{result.colours} - #{result.cost}
          button.btn( class="btn-primary" class="btn-toolbar", onclick= destination) Update
  script. 
    function dispatch(path){ 
      window.location.href=path 
    }